<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/common_capsule_button_radius" />
            <solid android:color="@color/main_header_invite_pressed_solid_color" />
            <stroke android:width="@dimen/common_capsule_button_stroke_width" android:color="@color/main_header_invite_pressed_stroke_color" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="@dimen/common_capsule_button_radius" />
            <solid android:color="@color/main_header_invite_pressed_solid_color" />
            <stroke android:width="@dimen/common_capsule_button_stroke_width" android:color="@color/main_header_invite_pressed_stroke_color" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/common_capsule_button_radius" />
            <solid android:color="@color/main_header_invite_pressed_solid_color" />
            <stroke android:width="@dimen/common_capsule_button_stroke_width" android:color="@color/main_header_invite_pressed_stroke_color" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/common_capsule_button_radius" />
            <solid android:color="@color/main_header_invite_normal_solid_color" />
            <stroke android:width="@dimen/common_capsule_button_stroke_width" android:color="@color/main_header_invite_normal_stroke_color" />
        </shape>
    </item>
</selector>