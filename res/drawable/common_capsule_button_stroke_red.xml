<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/common_capsule_button_radius" />
            <solid android:color="@color/common_content_view_pressed_red_color" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="@dimen/common_capsule_button_radius" />
            <solid android:color="@color/common_content_view_pressed_red_color" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/common_capsule_button_radius" />
            <solid android:color="@color/common_content_view_pressed_red_color" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/common_capsule_button_radius" />
            <stroke android:width="@dimen/common_capsule_button_stroke_width" android:color="@color/common_content_view_disable_red_color" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/common_capsule_button_radius" />
            <stroke android:width="@dimen/common_capsule_button_stroke_width" android:color="@color/common_content_view_normal_red_color" />
        </shape>
    </item>
</selector>