<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/action_view" android:clickable="true" android:layout_width="fill_parent" android:layout_height="@dimen/main_actionbar_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
