        <TextView android:textSize="@dimen/common_titlebar_title_textSize" android:textColor="#ffffffff" android:gravity="center" android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/common_titlebar_title_marginLeft" android:layout_marginRight="@dimen/common_titlebar_title_marginRight" android:text="@string/app_name" android:singleLine="true" android:layout_centerInParent="true" android:layout_marginStart="@dimen/common_titlebar_title_marginLeft" android:layout_marginEnd="@dimen/common_titlebar_title_marginRight" />
        <RelativeLayout android:id="@id/appwall_entry_area" android:layout_width="@dimen/main_actionbar_icon_width" android:layout_height="@dimen/main_actionbar_icon_height" android:layout_marginRight="@dimen/main_actionbar_appMarket_marginRight" android:layout_toLeftOf="@id/history" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/main_actionbar_appMarket_marginRight" android:layout_toStartOf="@id/history">
