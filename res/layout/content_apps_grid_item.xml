<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="@dimen/content_apps_grid_item_size" android:layout_height="@dimen/content_apps_grid_item_size"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_gravity="center" android:layout_width="@dimen/content_apps_grid_item_size" android:layout_height="@dimen/content_apps_grid_item_size">
        <ImageView android:layout_gravity="center" android:id="@id/grid_item_img" android:layout_width="@dimen/content_apps_grid_item_icon_size" android:layout_height="@dimen/content_apps_grid_item_icon_size" />
        <ImageView android:gravity="end" android:layout_gravity="end|bottom|center" android:id="@id/grid_item_check" android:visibility="gone" android:layout_width="@dimen/content_check_icon_size" android:layout_height="@dimen/content_check_icon_size" android:layout_marginRight="@dimen/content_apps_grid_item_check_icon_margin_right" android:layout_marginBottom="@dimen/content_apps_grid_item_check_icon_margin_bottom" android:src="@drawable/common_check_on" android:layout_marginEnd="@dimen/content_apps_grid_item_check_icon_margin_right" />
    </FrameLayout>
    <TextView android:textSize="@dimen/content_apps_grid_item_name_text_size" android:textColor="#ff444444" android:ellipsize="end" android:layout_gravity="center" android:id="@id/grid_apps_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
    <TextView android:textSize="@dimen/content_apps_grid_item_size_text_size" android:textColor="#ffbbbbbb" android:ellipsize="end" android:layout_gravity="center" android:id="@id/grid_apps_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
</LinearLayout>