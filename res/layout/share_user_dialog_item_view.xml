<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="@dimen/share_session_dialog_user_item_height">
        <FrameLayout android:layout_gravity="center" android:layout_width="@dimen/share_session_dialog_user_item_icon_size" android:layout_height="@dimen/share_session_dialog_user_item_icon_size">
            <ImageView android:layout_gravity="center" android:id="@id/icon" android:layout_width="@dimen/share_session_dialog_user_item_icon_size" android:layout_height="@dimen/share_session_dialog_user_item_icon_size" />
            <ImageView android:gravity="end" android:layout_gravity="end|bottom|center" android:id="@id/check" android:visibility="gone" android:layout_width="@dimen/content_check_icon_size" android:layout_height="@dimen/content_check_icon_size" android:src="@drawable/common_check_on" />
        </FrameLayout>
        <TextView android:textSize="@dimen/share_session_dialog_user_item_name_text_size" android:textColor="#ff191919" android:ellipsize="end" android:gravity="center" android:layout_gravity="center|top" android:id="@id/name" android:layout_width="@dimen/share_session_dialog_user_item_name_width" android:layout_height="wrap_content" android:layout_marginTop="@dimen/share_session_dialog_user_item_name_margin_top" android:singleLine="true" />
    </LinearLayout>
</FrameLayout>