<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.lenovo.anyshare.content.photoviewer.PhotoPagers android:id="@id/photo_pager_view" android:background="#ff000000" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <FrameLayout android:layout_gravity="top" android:id="@id/photo_header" android:background="#00000000" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="center_vertical" android:background="#88000000" android:layout_width="fill_parent" android:layout_height="@dimen/content_photoview_relativelayout_height" android:baselineAligned="false">
            <ImageView android:id="@id/check_button" android:background="@drawable/common_checkbox" android:clickable="true" android:layout_width="@dimen/content_photoview_check_button" android:layout_height="@dimen/content_photoview_check_button" android:layout_marginRight="@dimen/content_photoview_check_button_marginRight" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/content_photoview_check_button_marginRight" android:layout_alignParentEnd="true" />
            <LinearLayout android:orientation="horizontal" android:background="#00000000" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/content_photoview_linearlayout_marginRight" android:layout_toLeftOf="@id/check_button" android:layout_alignParentLeft="true" android:layout_marginEnd="@dimen/content_photoview_linearlayout_marginRight" android:layout_toStartOf="@id/check_button" android:layout_alignParentStart="true">
                <Button android:layout_gravity="start|center" android:id="@id/back_button" android:background="@drawable/common_titlebar_return_bg" android:layout_width="@dimen/content_photoview_back_button" android:layout_height="@dimen/content_photoview_back_button" android:layout_marginLeft="@dimen/content_photoview_linearlayout_paddingLeft" android:layout_marginStart="@dimen/content_photoview_linearlayout_paddingLeft" />
                <TextView android:textSize="@dimen/content_photoview_photo_paht_textSize" android:textColor="#ffffffff" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@id/photo_path" android:layout_width="wrap_content" android:layout_height="@dimen/content_photoview_photo_path_height" android:singleLine="true" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    <com.lenovo.anyshare.content.photoviewer.ThumbnailsListView android:gravity="center" android:layout_gravity="bottom" android:id="@id/thumbnails_list_view" android:background="#88000000" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="@dimen/content_photoview_thumbnails_height" />
    <ProgressBar android:layout_gravity="center" android:id="@id/photo_loading_progress" android:layout_width="@dimen/content_progress_item_size" android:layout_height="@dimen/content_progress_item_size" android:indeterminateDrawable="@drawable/common_progressbar_rotate_orange_bg" />
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@id/photo_info_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:background="@drawable/common_result_empty" android:layout_width="@dimen/content_photoview_imageview" android:layout_height="@dimen/content_photoview_imageview" />
        <TextView android:textSize="@dimen/content_photoview_photo_info_textSize" android:textColor="#ff333333" android:gravity="center" android:layout_gravity="center" android:id="@id/photo_info_text" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>