<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="@color/share_discover_background_color" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.lenovo.anyshare.widget.CustomProgressBar android:layout_gravity="center" android:id="@id/progress" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@id/progress_info" android:layout_width="wrap_content" android:layout_height="@dimen/share_progress_header_height">
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@id/size_area" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/share_progress_size_text_size" android:textColor="@color/common_yello_color" android:gravity="center" android:layout_gravity="center_vertical" android:id="@id/size" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/share_progress_size_unit_text_size" android:textColor="#ffffffff" android:id="@id/size_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:textSize="@dimen/share_progress_size_unit_text_size" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/share_session_transfer_progress_size_sent_info" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@id/time_area" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/share_progress_time_area_margin_left" android:layout_marginStart="@dimen/share_progress_time_area_margin_left">
            <TextView android:textSize="@dimen/share_progress_size_text_size" android:textColor="@color/common_yello_color" android:gravity="center" android:layout_gravity="center_vertical" android:id="@id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/share_progress_size_unit_text_size" android:textColor="#ffffffff" android:id="@id/time_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:textSize="@dimen/share_progress_size_unit_text_size" android:textColor="#ffffffff" android:id="@id/time_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/share_session_transfer_progress_time_used_info" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>