<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/root" android:background="@drawable/feed_common_card_bg" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="start|center" android:id="@id/icon" android:layout_width="@dimen/feed_icon_icon_width" android:layout_height="fill_parent" android:scaleType="fitCenter" android:minHeight="@dimen/feed_icon_icon_height" />
            <RelativeLayout android:layout_gravity="start|center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/feed_icon_icon_margin_end" android:layout_marginRight="@dimen/feed_common_margin_horizontal" android:minHeight="@dimen/feed_icon_icon_height" android:layout_marginStart="@dimen/feed_icon_icon_margin_end" android:layout_marginEnd="@dimen/feed_common_margin_horizontal">
                <TextView android:textSize="@dimen/feed_common_large_text_size" android:textStyle="bold" android:textColor="@color/feed_common_large_text_color" android:ellipsize="end" android:gravity="start" android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/feed_icon_title_margin_top" android:singleLine="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" />
                <TextView android:textSize="@dimen/feed_common_medium_text_size" android:textColor="@color/feed_common_medium_text_color" android:ellipsize="end" android:gravity="start" android:id="@id/message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/feed_icon_message_margin_top" android:layout_marginBottom="@dimen/feed_icon_message_margin_bottom" android:maxLines="3" android:layout_below="@id/title" android:layout_alignParentLeft="true" android:lineSpacingExtra="@dimen/feed_common_medium_text_line_space" android:layout_alignParentStart="true" />
                <TextView android:textSize="@dimen/feed_common_large_text_size" android:textStyle="bold" android:textColor="@color/feed_common_large_text_color" android:gravity="end" android:id="@id/btn_action" android:paddingBottom="@dimen/feed_icon_action_margin_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/message" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>
        <include layout="@layout/feed_common_bottom_divider" />
    </LinearLayout>
</FrameLayout>