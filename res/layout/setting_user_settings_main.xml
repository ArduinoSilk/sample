<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:fadingEdge="none" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:background="@color/anyshare_common_background_color" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:text="@string/setting_tab_common" style="@style/UtilStyle.SettingsTabText" />
        <FrameLayout android:id="@id/settings_storage" android:background="@drawable/setting_items_bg" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout style="@style/UtilStyle.SettingsSlipItem">
                <TextView android:text="@string/setting_storage" style="@style/UtilStyle.SettingsSummaryText" />
                <TextView android:id="@id/settings_storage_path" style="@style/UtilStyle.SettingsDetailText" />
            </LinearLayout>
            <include layout="@layout/common_right_arrow_goto" />
        </FrameLayout>
        <FrameLayout android:id="@id/settings_clean_caches" android:background="@drawable/setting_items_bg" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout style="@style/UtilStyle.SettingsSlipItem">
                <TextView android:text="@string/setting_clean_caches" style="@style/UtilStyle.SettingsSummaryText" />
                <TextView android:id="@id/settings_cache_size" style="@style/UtilStyle.SettingsDetailText" />
            </LinearLayout>
            <include layout="@layout/common_right_arrow_goto" />
        </FrameLayout>
        <FrameLayout android:background="@drawable/setting_items_bg" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout style="@style/UtilStyle.SettingsSlipItem">
                <TextView android:text="@string/setting_connect" style="@style/UtilStyle.SettingsSummaryText" />
