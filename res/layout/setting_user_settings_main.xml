            </LinearLayout>
            <com.lenovo.anyshare.widget.SlipButton android:id="@id/settings_connect_button" style="@style/UtilStyle.SettingsSlipButton" />
        </FrameLayout>
        <FrameLayout android:id="@id/settings_data_item" android:background="@drawable/setting_items_bg" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout style="@style/UtilStyle.SettingsSlipItem">
                <TextView android:text="@string/setting_3g" style="@style/UtilStyle.SettingsSummaryText" />
