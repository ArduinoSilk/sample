                <TextView android:text="@string/setting_flash_transfer_info" style="@style/UtilStyle.SettingsDetailText" />
            </LinearLayout>
            <com.lenovo.anyshare.widget.SlipButton android:id="@id/settings_flash_transfer_button" style="@style/UtilStyle.SettingsSlipButton" />
        </FrameLayout>
        <FrameLayout android:id="@id/setting_set_ap_password" android:background="@drawable/setting_items_bg" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout style="@style/UtilStyle.SettingsSlipItem">
                <TextView android:text="@string/setting_set_ap_password" style="@style/UtilStyle.SettingsSummaryText" />
                <TextView android:text="@string/setting_set_ap_password_info" style="@style/UtilStyle.SettingsDetailText" />
            </LinearLayout>
            <com.lenovo.anyshare.widget.SlipButton android:id="@id/settings_set_ap_password_button" style="@style/UtilStyle.SettingsSlipButton" />
        </FrameLayout>
        <FrameLayout android:id="@id/setting_widi_item" android:background="@drawable/setting_items_bg" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout style="@style/UtilStyle.SettingsSlipItem">
                <TextView android:text="@string/setting_widi" style="@style/UtilStyle.SettingsSummaryText" />
                <TextView android:text="@string/setting_widi_info" style="@style/UtilStyle.SettingsDetailText" />
            </LinearLayout>
            <com.lenovo.anyshare.widget.SlipButton android:id="@id/settings_widi_button" style="@style/UtilStyle.SettingsSlipButton" />
        </FrameLayout>
        <FrameLayout android:id="@id/setting_auto_update" android:background="@drawable/setting_items_bg" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout style="@style/UtilStyle.SettingsSlipItem">
                <TextView android:text="@string/setting_auto_update" style="@style/UtilStyle.SettingsSummaryText" />
