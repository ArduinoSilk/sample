            <LinearLayout style="@style/UtilStyle.SettingsSlipItem">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:text="@string/setting_language_change" style="@style/UtilStyle.SettingsSummaryText" />
