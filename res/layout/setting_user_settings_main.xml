        <FrameLayout android:id="@id/setting_invite_free_item" android:background="@drawable/setting_items_bg" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout style="@style/UtilStyle.SettingsSlipItem">
                <TextView android:text="@string/setting_invite_free" style="@style/UtilStyle.SettingsSummaryText" />
                <TextView android:text="@string/setting_invite_free_info" style="@style/UtilStyle.SettingsDetailText" />
            </LinearLayout>
            <com.lenovo.anyshare.widget.SlipButton android:id="@id/settings_invite_free_button" style="@style/UtilStyle.SettingsSlipButton" />
