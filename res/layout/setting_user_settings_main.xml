                <TextView android:id="@id/changed_language_info" android:text="@string/setting_user_transfer_report_info" style="@style/UtilStyle.SettingsDetailText" />
            </LinearLayout>
            <include layout="@layout/common_right_arrow_goto" />
        </FrameLayout>
        <TextView android:text="@string/setting_tab_advanced" style="@style/UtilStyle.SettingsTabText" />
