<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.lenovo.anyshare.pc.content.photo.PhotoPagers android:id="@id/photo_pager_view" android:background="@drawable/common_activity_bg" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <RelativeLayout android:gravity="center_vertical" android:layout_gravity="top" android:id="@id/photo_header" android:background="#88000000" android:layout_width="fill_parent" android:layout_height="@dimen/pc_playto_main_photo_header_height" android:baselineAligned="false">
        <LinearLayout android:id="@id/pc_playto_function" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginRight="@dimen/pc_playto_main_photo_header_margin_right" android:layout_alignParentRight="true" android:layout_marginEnd="@dimen/pc_playto_main_photo_header_margin_right" android:layout_alignParentEnd="true">
            <Button android:textSize="@dimen/pc_playto_main_photo_header_button_text_size" android:textColor="@color/pc_photo_titlebar_text_color" android:gravity="center" android:layout_gravity="center_vertical" android:id="@id/delete_button" android:background="@drawable/pc_remote_view_entry_btn" android:paddingLeft="@dimen/pc_playto_main_photo_header_button_padding_horizontal" android:paddingRight="@dimen/pc_playto_main_photo_header_button_padding_horizontal" android:layout_width="wrap_content" android:layout_height="@dimen/pc_playto_main_photo_header_button_height" android:text="@string/pc_playto_delete" android:singleLine="true" />
            <Button android:textSize="@dimen/pc_playto_main_photo_header_button_text_size" android:textColor="@color/pc_photo_titlebar_text_color" android:gravity="center" android:layout_gravity="center_vertical" android:id="@id/save_button" android:background="@drawable/pc_remote_view_entry_btn" android:paddingLeft="@dimen/pc_playto_main_photo_header_button_padding_horizontal" android:paddingRight="@dimen/pc_playto_main_photo_header_button_padding_horizontal" android:layout_width="wrap_content" android:layout_height="@dimen/pc_playto_main_photo_header_button_height" android:text="@string/pc_playto_save" android:singleLine="true" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:clickable="true" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/pc_playto_main_photo_header_albums_margin_left" android:layout_marginRight="@dimen/pc_playto_main_photo_header_albums_margin_right" android:layout_toLeftOf="@id/pc_playto_function" android:layout_alignParentLeft="true" android:layout_marginStart="@dimen/pc_playto_main_photo_header_albums_margin_left" android:layout_marginEnd="@dimen/pc_playto_main_photo_header_albums_margin_right" android:layout_toStartOf="@id/pc_playto_function" android:layout_alignParentStart="true">
            <Button android:layout_gravity="start|center" android:id="@id/albums_view_button" android:background="@drawable/pc_photo_titlebar_return_bg" android:layout_width="@dimen/pc_playto_main_photo_header_button_height" android:layout_height="@dimen/pc_playto_main_photo_header_button_height" />
            <RelativeLayout android:gravity="start" android:layout_gravity="start|center" android:orientation="horizontal" android:id="@id/albums_list_button" android:layout_width="wrap_content" android:layout_height="@dimen/pc_playto_main_photo_header_button_height">
                <ImageView android:id="@id/pc_albums_arrow" android:layout_width="@dimen/pc_playto_main_photo_header_albums_arrow_size" android:layout_height="@dimen/pc_playto_main_photo_header_albums_arrow_size" android:src="@drawable/pc_albums_arrow" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true" />
                <TextView android:textSize="@dimen/common_title_text_size_large" android:textColor="@color/pc_photo_titlebar_text_color" android:ellipsize="end" android:gravity="center_vertical" android:id="@id/photo_path" android:paddingLeft="@dimen/pc_playto_main_photo_header_albums_photo_path_padding_horizontal" android:paddingRight="@dimen/pc_playto_main_photo_header_albums_photo_path_padding_horizontal" android:layout_width="wrap_content" android:layout_height="@dimen/pc_playto_main_photo_header_button_height" android:singleLine="true" android:layout_toLeftOf="@id/pc_albums_arrow" android:layout_toStartOf="@id/pc_albums_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView android:gravity="center" android:layout_gravity="center|top" android:id="@id/fly_to_pc" android:background="@drawable/anyshare_pc_connect_device" android:visibility="invisible" android:layout_width="@dimen/pc_playto_main_fly_to_pc_size" android:layout_height="@dimen/pc_playto_main_fly_to_pc_size" android:singleLine="true" />
    <com.lenovo.anyshare.pc.content.photo.ThumbnailsListView android:gravity="center" android:layout_gravity="bottom" android:id="@id/thumbnails_list_view" android:background="#88000000" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="@dimen/pc_playto_main_thumbnail_listview_height" />
    <ProgressBar android:layout_gravity="center" android:id="@id/photo_loading_progress" android:layout_width="@dimen/pc_remote_view_files_view_progress_size" android:layout_height="@dimen/pc_remote_view_files_view_progress_size" android:indeterminateDrawable="@drawable/common_progressbar_rotate_orange_bg" />
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@id/photo_info_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:background="@drawable/common_result_empty" android:layout_width="@dimen/pc_remote_view_files_view_load_info_icon_size" android:layout_height="@dimen/pc_remote_view_files_view_load_info_icon_size" />
        <TextView android:textSize="@dimen/common_title_text_size_large" android:textColor="#ff333333" android:gravity="center" android:layout_gravity="center" android:id="@id/photo_info_text" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>